{
  "name": "hecate",
  "version": "1.0.0",
  "description": "Serverless authentication service built with NodeJS",
  "scripts": {
    "dev": "ts-node-dev src/main.ts | pino-pretty",
    "function": "functions-framework --target=hecate | pino-pretty",
    "lint": "eslint --fix ./**/*.ts",
    "build": "tsc && copyfiles package.json .env env.yaml .gcloudignore dist",
    "test": "jest",
    "deploy": "gcloud functions deploy hecate --runtime nodejs8 --trigger-http --env-vars-file env.yaml --memory 128 --timeout 10"
  },
  "keywords": [
    "koa",
    "typescript",
    "auth",
    "serverless",
    "functions"
  ],
  "author": "Christos Giallouros",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/giall/hecate.git"
  },
  "bugs": {
    "url": "https://github.com/giall/hecate/issues"
  },
  "homepage": "https://github.com/giall/hecate",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "security"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "warn",
        2
      ],
      "@typescript-eslint/explicit-member-accessibility": [
        "off"
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "bcrypt": "^3.0.8",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-joi-controllers": "^1.2.2",
    "koa-logger": "^3.2.1",
    "mongodb": "^3.5.5",
    "pino": "^5.17.0",
    "rate-limiter-flexible": "^2.1.3",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.5.0",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/koa": "^2.11.2",
    "@types/koa-joi-router": "^5.2.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__cors": "^3.0.1",
    "@types/mongodb": "^3.5.2",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/node": "^13.9.2",
    "@types/pino": "^5.17.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.8",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "chance": "^1.1.4",
    "copyfiles": "^2.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^25.1.0",
    "mongodb-memory-server": "^6.4.1",
    "pino-pretty": "^3.6.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
