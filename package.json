{
  "name": "hecate",
  "version": "1.0.0",
  "description": "Serverless authentication service built with NodeJS",
  "scripts": {
    "dev": "ts-node-dev src/main.ts | pino-pretty",
    "function": "functions-framework --target=hecate | pino-pretty",
    "lint": "eslint --fix ./**/*.ts",
    "build": "tsc && copyfiles package.json .env env.yaml .gcloudignore dist",
    "test": "jest",
    "deploy": "gcloud functions deploy hecate --runtime nodejs8 --trigger-http --env-vars-file env.yaml --memory 128 --timeout 10"
  },
  "keywords": [
    "koa",
    "typescript",
    "auth",
    "serverless",
    "functions"
  ],
  "author": "Christos Giallouros",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/giall/hecate.git"
  },
  "bugs": {
    "url": "https://github.com/giall/hecate/issues"
  },
  "homepage": "https://github.com/giall/hecate",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "security"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "warn",
        2
      ],
      "@typescript-eslint/explicit-member-accessibility": [
        "off"
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "bcrypt": "^3.0.6",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-joi-controllers": "^1.2.0",
    "koa-logger": "^3.2.1",
    "mongodb": "^3.3.5",
    "pino": "^5.14.0",
    "rate-limiter-flexible": "^1.1.6",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.3.2",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.0.52",
    "@types/koa-joi-router": "^5.2.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__cors": "^2.2.3",
    "@types/mongodb": "^3.3.11",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/node": "^12.12.14",
    "@types/pino": "^5.8.13",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "chance": "^1.1.3",
    "copyfiles": "^2.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.0.1",
    "pino-pretty": "^3.4.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  }
}
