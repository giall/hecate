{
  "name": "hecate",
  "version": "1.0.0",
  "description": "Authentication service built with NodeJS",
  "scripts": {
    "start": "node main.js",
    "watch": "ts-node-dev src/main.ts | npx pino-pretty",
    "lint": "eslint --fix ./**/*.ts",
    "build": "tsc && copyfiles package.json favicon.ico app.yaml .gcloudignore dist",
    "test": "jest",
    "deploy": "gcloud app deploy"
  },
  "keywords": [
    "koa",
    "typescript",
    "auth"
  ],
  "author": "Christos Giallouros",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/giall/hecate.git"
  },
  "bugs": {
    "url": "https://github.com/giall/hecate/issues"
  },
  "homepage": "https://github.com/giall/hecate",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "security"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "warn",
        2
      ],
      "@typescript-eslint/explicit-member-accessibility": [
        "off"
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-helmet": "^5.2.0",
    "koa-joi-controllers": "^1.2.0",
    "koa-logger": "^3.2.1",
    "mongodb": "^3.3.4",
    "nodemailer": "^6.3.1",
    "pino": "^5.13.6",
    "rate-limiter-flexible": "^1.1.6",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.0.52",
    "@types/koa-joi-router": "^5.2.3",
    "@types/koa-logger": "^3.1.1",
    "@types/mongodb": "^3.3.10",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/node": "^12.12.8",
    "@types/nodemailer": "^6.2.2",
    "@types/pino": "^5.8.13",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "chance": "^1.1.3",
    "copyfiles": "^2.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.0.1",
    "pino-pretty": "^3.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  }
}
